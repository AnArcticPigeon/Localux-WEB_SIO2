{% extends 'base.html.twig' %}

{% block title %}Ne louer pas une simple voiture, louer LA TUTURE de vos rêves!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .center { display: block; margin-left: auto; margin-right: auto; }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Ne louer pas une simple voiture, louer LA TUTURE de vos rêves!</h1>

        {% if lesModeles is not empty %}
        <h4>Les voitures disponibles</h4>

        <div class="row">
            {% for unModele in lesModeles %}

            <div class="col-md-4 mb-4">
                <a href="{{ path('app_louer_voiture', {id:unModele.id}) }}" class="cardClass" data-vehicle-id="{{ unModele.id }}">
                    <div class="card h-100 d-flex flex-column">
                        <div style="flex: 1 0 auto;">
                            <img class="card-img-top" src="{{ unModele.photo }}" width="300" height="300" alt="Image failed to Load :'(">
                        </div>
                        <div style="flex: 0 0 auto; height: 0;">
                        </div>
                        <div class="card-footer text-muted">
                            <center><h5><u><i><strong>{{ unModele.libelle }}</strong></i></u></h5></center>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>

    <script src="{{ asset('js/search.js') }}"></script>

{% endblock %}